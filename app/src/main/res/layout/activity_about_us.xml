<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AboutUsActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_action_back" />

        <com.drkeironbrown.clc.custom.TfTextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="About Us"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:isBold="true" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.drkeironbrown.clc.custom.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="About Us"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:isBold="true" />


            <com.drkeironbrown.clc.custom.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="Christian Life Coach (CLC) was conceived and designed by Dr. Keiron Brown, a licensed Clinical Psychologist with more than 25 years of professional experience in helping people feel good about themselves, overcome challenges, achieve higher levels of success and lead better and more fulfilling lives.  More than a creative clinician, Dr. Brown is a dedicated Christian who has been blessed with the mission of helping as many of Godâ€™s people as possible.  Dr. Brown strives to help anyone he can reach with messages of hope, salvation and Godly living.  Christian Life Coach is an important part of an entire system of products and services developed by Dr. Brown that enable users to be better at and more fulfilled in whatever they do in life, especially in their relationships."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.drkeironbrown.clc.custom.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="What is Christian Life Coach?"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:isBold="true" />


            <com.drkeironbrown.clc.custom.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="Christian Life Coach is like having Dr. Brown by your side, as close as your smart devices.  CLC covers an array of common, but limiting, mindsets, behaviors and habits, and provides strategies to break those old patterns and lays out more effective and productive ways to move beyond those previous limitations.  Clinical insight, paired with a solid grounding in Scripture, enable Dr. Brown to provide rich and comprehensive insights into the issues and obstacles that restrict and limit people in various aspects of their lives."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.drkeironbrown.clc.custom.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="Who is Christian Life Coach for?"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:isBold="true" />


            <com.drkeironbrown.clc.custom.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="Christian Life Coach is for anyone faced with the common challenges of life that produce stress and anxiety and that interfere with their personal growth, their relationships and the happiness and prosperity in life that they want and deserve.  The information provided by Christian Life Coach strikes an effective balance between encouraging and insightful messages that speak to people in their everyday language and the deep and meaningful information and direction that the Bible and its Scriptures have always provided for everyone."
                android:textColor="@color/black"
                android:textSize="14sp" />


            <com.drkeironbrown.clc.custom.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="For more information on life-changing products and services, visit Dr. Brown at:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.drkeironbrown.clc.custom.TfTextView
                android:id="@+id/txtLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/darkBlue"
                android:text="http://drkeironbrown.com"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>